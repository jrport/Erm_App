<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-3" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class='text-3xl font-semibold text-center'>Alterar senha</div>
  <div class="field">
    <%= f.label :password, "Nova senha" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> mínimo de caractéres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input input-bordered' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nova senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-bordered'%>
  </div>

  <div class="actions pt-4">
    <%= f.submit "Change my password", class: "btn btn-success" %>
  </div>

  <% resource.errors.full_messages.each do |message| %>
    <p class='alert text-error text-sm'><%= message %></p>
  <% end %>
<% end %>

