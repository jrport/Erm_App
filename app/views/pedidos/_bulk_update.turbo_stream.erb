<% ids.each do |id| %>
  <%= turbo_stream.update format('badge_%d', id) do %>
    <%= status_badge(status) %>
  <% end %>
<% end %>

<%= turbo_stream.update 'total_count' do %>
  <%= metrics[:total] %>
<% end %>

<%= turbo_stream.update 'finished_count' do %>
  <%= metrics[:finished] %>
<% end %>

<%= turbo_stream.update 'pending_count' do %>
  <%= metrics[:pending] %>
<% end %>
