<%= search_form_for @ransack_query, class: 'pt-2 pb-4 overflow-x-auto grid grid-rows-2 grid-cols-8 gap-x-6  px-6' do |f|
  %>
  <div class="row-span-1 col-span-8 grid grid-cols-subgrid">
    <div class='col-span-8 grid grid-cols-subgrid'>
      <div class='font-semibold text-lg col-span-2'>Loja:</div>
      <div class='font-semibold text-lg col-span-2'>Desde:</div>
      <div class='font-semibold text-lg col-span-2'>At√©:</div>
    </div>
  </div>
  <div class="row-span-1 col-span-8 grid grid-cols-subgrid">
    <div class='col-span-6 grid grid-cols-subgrid'>
      <%= f.select :loja_id_eq, options_for_select(Loja.all.pluck(:nome, :id)), {include_blank: 'Escolha a loja de origem'}, {class: 'col-span-2 select text-ellipsis'
        } %>
      <%= f.date_field :data_do_pedido_gteq, class: 'input col-span-2' %>
      <%= f.date_field :data_do_pedido_lteq, class: 'input col-span-2' %>
    </div>
    <div class='gap-2 col-span-2 grid grid-cols-3'>
      <button class='btn btn-info' type='submit'>
        <div class="mi">search</div>
      </button>
      <a href='<%= pedidos_path %>' class='btn btn-error'>
        <div class="mi">delete</div>
      </a>
      <a href='<%= new_pedido_path %>' class='btn btn-success' data-turbo-action="advance" data-turbo-frame='_top'>
        <div class="mi">add</div>
      </a>
    </div>
  </div>
  <% end %>
