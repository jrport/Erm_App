<div class="flex flex-col justify-center items-center flex-1 text-stone-100">
  <div>Pedido ID: <%=  @pedido.id%></div>
  <div>Data do pedido: <%= String(@pedido.created_at)[0..-4].strip!.gsub("-","/") %></div>
  <div class="flex flex-row gap-2">
    <div>Unidade de Origem: </div> 
    <a href=<%= loja_path(@loja) %> class="underline"><%= @loja.nome%></a>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table
            class="min-w-full text-left text-sm font-light text-surface dark:text-stone-100">
            <thead
              class="border-b border-neutral-200 font-medium dark:border-white/10">
              <tr>
                <th scope="col" class="text-center px-6 py-4">Id</th>
                <th scope="col" class="text-center px-6 py-4">Item</th>
                <th scope="col" class="text-center px-6 py-4">Quantidade</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr class="border-b border-neutral-200 transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-white/10 dark:hover:bg-neutral-600">
                  <td scope="col" class="text-center px-6 py-4"><%= item.id %></td>
                  <td scope="col" class="text-center px-6 py-4"><%= item.nome %></td>
                  <td scope="col" class="text-center px-6 py-4"><%= item.quantidade %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
