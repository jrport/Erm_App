<turbo-frame id='pedido-details' class="my-auto mx-20">
  <div class='bg-base-300 p-20 relative shadow-xl rounded-box'>
    <a href='/pedidos' data-turbo-action="advance" data-turbo-frame='_top' class="mi md-36 absolute top-3 hover:bg-base-100 transition-colors p-4  rounded-full left-3">
      close
    </a>
    <div class='grid grid-cols-2 gap-10'>
      <%= render 'pedidos/pedido', pedido: @pedido %>
      <div class='h-[50dvh] rounded bg-base-100 border-gray-600 border-2 overflow-x-hidden overflow-y-auto'>
        <div class='grid grid-cols-4 grid-rows-auto'>
          <div class="grid bg-gray-800 h-fit grid-cols-subgrid col-span-4 divide-x-2">
            <%= table_headers(include_blank: false) %>
          </div>
          <% @pedido.items_de_pedidos.each do |item| %>
            <%= render 'pedidos/item_de_pedido' , item: item %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
