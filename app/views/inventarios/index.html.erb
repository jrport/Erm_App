<turbo-frame class='absolute' id='modal'>
</turbo-frame>
<turbo-frame id='content' data-controller='inventarios'  class='h-full my-18 p-10 mx-10'>
  <turbo-frame data-controller='inventarios' id='table' class='relative rounded-box h-full grid grid-rows-[1fr_21fr] bg-base-300'>
    <turbo-frame id="form_control" target='table-content'>
      <%= render 'inventarios/table_control', items: @items, ransack: @ransack_query %>
    </turbo-frame>
    <turbo-frame id="data_body" class='grid grid-rows-[19fr_1fr] h-full overflow-y-auto'>
      <%= render 'inventarios/table', items: @items, ransack: @ransack_query %>
      <div class='flex border-t-2 border-base-100 items-center px-3 py-5 justify-between'>
        <%== pagy_info(@pagy, item_name: 'Items' .pluralize(@pagy.count)) %>
        <%== pagy_nav(@pagy) %>
      </div>
    </turbo-frame>
  </turbo-frame>
</turbo-frame>
