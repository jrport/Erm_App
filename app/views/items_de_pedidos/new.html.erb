<%= turbo_frame_tag "content", class: "" do %>
  <%= render partial: 'layouts/header',
    locals: {
      links: [
        {title: 'Início', uri: home_path},
        {title: 'Pedidos', uri: pedidos_path},
        {title: 'Novo Pedido', uri: new_pedido_path},
        {title: 'Items', uri: nil},
      ]} %>
    <div class='h-[89dvh] flex justify-center items-center'>
      <div class='relative w-[70%] xl:h-[80%] py-12 border-2 rounded-xl shadow-xl border-gray-300'>
        <%= link_to pedidos_path, class: "mi md-36 absolute top-5 left-5", data: { turbo_action: 'advance' } do %>
          <span class="rounded-2xl p-2 hover:bg-gray-400 duration-300">arrow_back</span>
        <% end %>
        <h1 class='text-6xl mx-auto font-medium mb-8 text-center'>Itens do Pedido</h1>
        <%= form_with model: @item, class: 'grid px-5 grid-cols-2 gap-x-8' do |form| %>
          <div class="grid col-span-1 gap-y-5">
            <div class="flex flex-col">
              <%= form.label :nome, "Nome do Item", class:'text-lg font-semibold' %>
              <%= form.text_field :nome, class: 'input input-bordered' %>
            </div>
            <div class="flex flex-col">
              <%= form.label :porcao, "Porção", class:'text-lg font-semibold' %>
              <%= form.text_field :porcao, class: 'input input-bordered' %>
            </div>
            <div class="flex flex-col">
              <%= form.label :quantidade, "Quantidade", class:'text-lg font-semibold' %>
              <%= form.number_field :quantidade, class: 'rounded-xl input-bordered' %>
            </div>
            <div class="flex flex-col">
              <%= form.label :observacoes, "Observações", class:'text-lg font-semibold' %>
              <%= form.text_area :observacoes, class: 'rounded-xl input-bordered' %>
            </div>
          </div>
          <div class="col-span-1">
            <%= render partial: 'items_de_pedidos/table', locals: @pedido.items_de_pedidos %>
          </div>
        <% end %>
      </div>
    </div>
<% end %>
